<%= form_for user do |f| %>
  <div>
    <%= f.text_field :name, placeholder: 'Name', autocomplete: :off %>
  </div>

  <div>
    <%= f.text_field :username, placeholder: 'Username', autocomplete: :off %>
    <p id='username-url'>
      This will be your profile page: portfolio-app.com/<span>USERNAME</span>
    </p>
  </div>

  <div>
    <%= f.text_field :email, placeholder: 'Email' %>
  </div>

  <div>
    <%= f.password_field :password, placeholder: 'Password' %>
  </div>

  <div>
    <%= f.submit 'Sign Up' %>
  </div>
<% end %>
